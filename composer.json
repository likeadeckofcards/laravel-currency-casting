{
    "name": "snoeren-development/laravel-currency-casting",
    "description": "Cast currency attributes, stored as integer, to floats automatically.",
    "keywords": [
        "laravel",
        "currency",
        "casting",
        "snoeren"
    ],
    "authors": [
        {
            "name": "Michael Snoeren",
            "email": "info@snoerendevelopment.nl"
        }
    ],
    "homepage": "https://github.com/snoeren-development/laravel-currency-casting",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^8.0|^9.0|^10.0"
    },
    "require-dev": {
        "illuminate/database": "v10.24.0",
        "phpunit/phpunit": "^10.3.5"
    },
    "autoload": {
        "psr-4": {
            "SnoerenDevelopment\\CurrencyCasting\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SnoerenDevelopment\\CurrencyCasting\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    },
    "config": {
        "sort-packages": true
    }
}
